<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MainFragment">


    <Button
        android:id="@+id/CandidateBtn"
        android:layout_width="169dp"
        android:layout_height="60dp"
        android:layout_marginVertical="100dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="119dp"
        android:text="Candidate"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VoterBtn"
        tools:visibility="visible" />


    <Button
        android:id="@+id/ElectoralBtn"
        android:layout_width="169dp"
        android:layout_height="60dp"
        android:layout_marginVertical="100dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="119dp"
        android:text="Electoral"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CandidateBtn"
        tools:visibility="visible" />

    <Button
        android:id="@+id/blochainPanel"
        android:layout_width="169dp"
        android:layout_height="60dp"
        android:layout_marginVertical="100dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="120dp"
        android:text="Blockhain"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ElectoralBtn"
        tools:visibility="visible" />

    <Button
        android:id="@+id/VoterBtn"
        android:layout_width="167dp"
        android:layout_height="59dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="120dp"
        android:text="Voter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>